<%= form_for(contribution) do |f| %>
  <% if contribution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contribution.errors.count, "error") %> prohibited this contribution from being saved:</h2>

      <ul>
        <% contribution.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <table border="0">
    <tbody>
      <tr>
        <td>
          <%= f.label :title %>
        </td>
        <td>
          <%= f.text_field :title, :size => 50 %>
        </td>
      </tr>
       <tr>
        <td></td>
      </tr>
      <tr>
        <td>
          <%= f.label :url %>
        </td>
        <td>
          <%= f.text_field :url, :size => 50 %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><b>or</b></td>
      </tr>
      <tr>
        <td>
          <%= f.label :text %>
        </td>
        <td>
          <%= f.text_area :text, :size => "50x4" %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= f.submit "Submit" %>
        </td>
      </tr>
       <tr height="20px"></tr>
      <tr>
        <td></td>
        <td>Leave url blank to submit a question for discussion. If there is no url, the text (if any) will appear at the top of the thread.<br><br></td>
    </tbody>
  </table>

<% end %>

