<table border="0" cellpadding="0" align="center" cellspacing="0" width="85%" bgcolor="#f6f6ef" class="table_comment">
  <tr class="comment">
    <td>
      <table border=0>
        <tbody>
          <tr>
            <td class="ind">
            </td>
            <td valign="top" class="votelinks" style="padding-left:35px">
            </td>
            <td class="default">
              <div style="margin-top:2px; margin-bottom:-10px;">
                <span class="comhead">
                  <a href="users/<%= comment.user.id%>"><%= comment.user.name %></a> 
                  <span><a href=""><%= comment.created_at %></a></span> 
                  <span> | on: <%= comment.contribution.title %> </span> 
                  <!--<a class="togg" n="1" href="javascript:void(0)" onclick="return toggle(12936912)">[-]</a>-->          
                </span>
              </div>
              <br>
              <div class="comment" style="color: #000000;">
                <%= comment.content %>
              </div>
              <br>
              <form method="post" action="/replies">
                <textarea name="reply[content]" rows="6" cols="60"></textarea>
                <input name="reply[user_id]" style="display: none" value="<%= current_user.id %>"></input>
                <input name="reply[comment_id]" style="display: none" value="<%= comment.id %>"></input>
                <br><br>
                <input type="submit" value="reply">
              </form>
            </td>
          </tr>
          
        </tbody>
      </table>
